<div class="booyah-box col-10 offset-1">
  <h1>Add a new lesson</h1>
  <%= simple_form_for @lesson, url: instructor_section_lessons_path(@section) do |f| %>
      <label>Title</label>
      <%= f.input :title, label: false %>
      <label>Subtitle</label>
      <%= f.input :subtitle, label:false %>
      <br />
      <%= f.submit "Add the lesson", class: 'btn btn-primary' %>
      <br />
      <br />
  <% end %>
</div>